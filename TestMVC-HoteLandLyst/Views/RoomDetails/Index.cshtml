@model TestMVC_HoteLandLyst.Models.BookingModel;
@{
    ViewData["Title"] = "Room" + Model.Room.RoomNumber + "Details";
}
<h1>Welcome to room @Model.Room.RoomNumber!</h1>
@*<h4>This room costs @Model.Room.ToString() kr. daily</h4>*@
@Html.LabelForModel("This room costs " + Model.Room.ToString() + " kr. daily", new { id = "RoomPrice" })

<form class="needs-validation" novalidate asp-action="AddToBooking" asp-controller="Booking">
    <div class="form-group">
        <div class="form-row">
            <div class="col">

                <label class="col-form-label" for="fname">First name:</label><br>
                @Html.EditorFor(model => model.Customer.FName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                <div class="invalid-feedback">
                    Please write your first name.
                </div>
            </div>
            <div class="col">

                <label class="col-form-label" for="lname" asp-for="Customer.LName">Last name:</label><br>
                @Html.EditorFor(model => model.Customer.LName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                <div class="invalid-feedback">
                    Please write your last name.
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col">

                <label class="col-form-label" for="phoneNum" asp-for="Customer.PhoneNumber">Phone Number:</label><br>
                @Html.EditorFor(model => model.Customer.PhoneNumber, new { htmlAttributes = new { @class = "form-control", min = "8", max = "8", required = "required" } })
                <div class="invalid-feedback">
                    Please write your phone number.
                </div>
            </div>
            <div class="col">
                <label class="col-form-label" for="address" asp-for="Customer.Address">Address:</label><br>
                @Html.EditorFor(model => model.Customer.Address, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                <div class="invalid-feedback">
                    Please write your full address.
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                <label class="label col-form-label" for="start" asp-for="StartDate">Start date:</label><br>
                @Html.TextBoxFor(model => model.StartDate, "{0:dd-MM-yyyy}", new { @class = "form-control", type = "date", required = "required" })
                <div class="invalid-feedback">
                    Please insert a valid date.
                </div>

            </div>
            <div class="col">
                <label class="label col-form-label" for="end" asp-for="EndDate">End date:</label><br>
                @Html.TextBoxFor(model => model.EndDate, "{0:dd-MM-yyyy}", new { @class = "form-control", type = "date", required = "required" })
                <div class="invalid-feedback">
                    Please insert a valid date.
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col">
                <button class="btn btn-success btn-block" type="submit" id="submitButton" name="submitButton">Submit booking</button>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript" src="~/js/ValidationSubmit.js"></script>
<script type="text/javascript" src="~/js/PriceChanger.js"></script>