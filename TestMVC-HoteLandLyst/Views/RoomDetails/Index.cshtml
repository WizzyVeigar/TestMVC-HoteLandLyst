    <script src="~/js/build/jquery.datetimepicker.full.js"></script>
    <link href="~/css/jquery.datetimepicker.css" rel="stylesheet" />

    <script>

        var ultraNumber = @Model.Room.RoomNumber;

        function GetUnavailableDates()
        {
            var url = window.location.origin + "/RoomDetails/GetUnavailableDates";
            $.get
            (
                url, { roomNumber: ultraNumber }, function (data)
                {
                    var something = data.map
                        (date => function () {
                            let jsDate = new Date(date);
                            let returnDate = (jsDate.getDate()) + '-' + (jsDate.getMonth()) + '-' + (jsDate.getFullYear());
                            console.log(returnDate);
                            return returnDate;
                        }
                        );
                    //console.log(something);
                }
            )
        }

        //var array = ['2020-12-09', '2020-12-10']

        $('#datetimepicker').datetimepicker({
            disabledDates: GetUnavailableDates(),
            format: 'Y-m-d H:i'
        });

        var runOnce = false;
        $("#enddate").on("dp.change", function () {

            let startDate = document.getElementById("StartDate").value;
            let endDate = document.getElementById("EndDate").value;

            if ((Date.parse(endDate) <= Date.parse(startDate)) && runOnce === true) {
                alert("End date should be greater than Start date");
                document.getElementById("EndDate").value = "";
            }

            //Check so the method doesn't alert on load
            if (runOnce === false) {
                runOnce = true;
            }
        });

    </script>

